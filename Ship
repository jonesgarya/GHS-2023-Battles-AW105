public class Ship
{
    private int length = -1;
    private int row = -1;
    private int column = -1;
    private int direction = -1;
    
    public Ship(int length)
    {
        this.length = length;
    }
    public boolean isLocationSet()
    {
        return row == -1 || column == -1;
    }
    public boolean isDirectionSet()
    {
        return direction == -1;
    }
    
    public void setLocation(int row, int column)
    {
        this.row = Math.abs(row % Grid.size); 
        this.column = Math.abs(column % Grid.size); 
    }
    public void isDirectionSet(boolean direction)
    {
        this.direction = direction ? 1 : 0;
    }
    
    public int getRow()
    {
        return row;
    }
    public int getColumn()
    {
        return column;
    }
    public int getDirection()
    {
        return direction;
    }
    public boolean getD()
    {
        return direction == 1;
    }
    public String directionToString()
    {
        return direction == 1 ? "Vertical" : (direction == 0? "Horizonatal" : "Not Set");
    }
    public int endRow()
    {
        return row + length * (direction == -1 ? 0 : 1- direction);
    }
    public int endColumn()
    {
        return row + length * (direction == -1 ? 0 : direction);
    }
    
    public String toString()
    {
        return "A ship spanning from " + row + ", " + column + " to " + endRow() + ", " + endColumn() + ".";
    }
}
